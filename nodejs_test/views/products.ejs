<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Urunler</h1>
   <p>
    <%= products[0].name %>
    <%= products[1].name %>
   </p>
   <ul>
    <% products.forEach(product => { %>

        <% if (product.price >= 40000 && product.isActive) { %>
            <li>
                <a href="/products/<%= product.id %>">
                    <%= product.name%> - <%= product.price %>
                </a> 
                
            </li>
        <% } %>

        
    <% }) %>
   </ul>
</body>
</html>