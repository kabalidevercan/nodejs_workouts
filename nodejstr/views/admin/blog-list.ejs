<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>   

   <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <table class="table table-border table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">
                                id
                            </th>
                            <th style="width: 150px;">
                                resim
                            </th>
                            <th>
                                baslik
                            </th>
                            <th style="width: 130px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                       <% blogList.forEach(blogElement => { %>

                        <tr>
                            <td><%= blogElement.blogId %></td>
                            <td>
                                <img src="/static/images/<%= blogElement.resim %>" alt="" class="img-fluid">
                            </td>
                            <td><%= blogElement.baslik %></td>
                            <td>
                                <a class="btn btn-sm btn-primary" href="/admin/blogs/<%= blogElement.blogId %>">Edit</a>
                                <a class="btn btn-sm btn-danger" href="/admin/blogs/<%= blogElement.blogId %>">Delete</a>
                            </td>
                        </tr>


                       <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
   </div>

</body>
</html>

