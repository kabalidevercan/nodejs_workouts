<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>   

   <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                    <% if (action != 'undefined' && action == 'edit') { %>
                     <div class="alert alert-success">
                        <%= categoryId %> numarali id guncellendi
                     </div>
                    <% } %>
                    <% if (action != 'undefined' && action == 'create') { %>
                     <div class="alert alert-success">
                        Category Eklendi
                     </div>
                    <% } %>
                    <% if (action != 'undefined' && action == 'delete') { %>
                        <div class="alert alert-warning">
                            Category Silindi
                        </div>
                    <% } %>
                <table class="table table-border table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">
                                id
                            </th>
                            <th>
                                name
                            </th>
                            <th style="width: 130px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                       <% categoryList.forEach(categoryElement => { %>

                        <tr>
                            <td><%= categoryElement.categoryId %></td>
                            <td><%= categoryElement.categoryName %></td>
                            <td>
                                <a class="btn btn-sm btn-primary" href="/admin/categories/<%= categoryElement.categoryId %>">Edit</a>
                                <a class="btn btn-sm btn-danger" href="/admin/category/delete/<%= categoryElement.categoryId %>">Delete</a>
                            </td>
                        </tr>


                       <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
   </div>

</body>
</html>

